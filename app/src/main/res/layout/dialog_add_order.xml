<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30sp"

    android:orientation="vertical"
    android:background="@color/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/color_text_03"
        android:layout_gravity="center"
        android:text="新订单"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText android:id="@+id/dialog_add_order_edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color1"
            android:hint="请输入影院名称" />
        <RelativeLayout android:id="@+id/dialog_add_order_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="选择观影时间"
                    android:textSize="20sp"/>
                <TextView android:id="@+id/dialog_add_tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2019-3-18 10:10:10"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"/>
            </LinearLayout>
            
        </RelativeLayout>
        <Spinner android:id="@+id/dialog_add_order_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/dialog_add_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_margin="5dp"
            android:background="@color/color1"
            android:hint="请输入票价"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button android:id="@+id/dialog_add_order_btn_codes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生成二维码"/>
            <Button android:id="@+id/dialog_add_order_btn_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存"/>
            <Button android:id="@+id/dialog_add_order_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView android:id="@+id/activity_main_Img_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/code"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>